<form>
     
    <div>
        <div>
            <label for="email">Email</label>
            <input id="email" name="email" type="email" placeholder="Enter Your Email"/>
        </div>

        <div>
            <label for="pass">Password</label>
            <input id="pass" name="pass" type="password" placeholder="Enter Your Password" />
        </div>

        <div>
