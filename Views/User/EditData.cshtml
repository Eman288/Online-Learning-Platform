@{
}
<style>
    header, footer {
        display: none !important;
    }

    .main {
        height: 100%;
    }

    .edit-data-block::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: -1;
        filter: blur(1px);
    }
</style>

<div class="edit-data-block">


    <form asp-controller="User" asp-action="EditData" method="post" class="edit-data-form" enctype="multipart/form-data">
        <div>
            <label for="name">Name</label>
            <input id="name" type="text" value="@Model.UserName" asp-for="UserName" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div>
            <label for="email">Email</label>
            <input id="email" type="email" value="@Model.UserEmail" asp-for="UserEmail" />
            <span asp-validation-for="UserEmail" class="text-danger"></span>
        </div>

        <div>
            <label for="pass">Password</label>
            <input id="pass" type="password" asp-for="UserPassword" />
            <span asp-validation-for="UserPassword" class="text-danger"></span>
        </div>

        <div>
            <label for="confpass">Confirm Password</label>
            <input id="confpass" type="password" name="confpass" />
        </div>


        <div class="edit-buttons">
            <button type="submit">Save</button>
            <a asp-controller="User" asp-action="Cancel">
                <button class="cancel">Cancel</button>
            </a>
        </div>
    </form>

</div>

<script>
    const inputs = document.querySelectorAll('input');

    inputs.forEach(input => {
        input.addEventListener('input', function () {
            if (this.value.length > 0) {
                this.classList.add('inputHasContent');
            } else {
                this.classList.remove('inputHasContent');
            }
        });
    });
</script>